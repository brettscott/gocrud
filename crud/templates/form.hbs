<html>
<body>

{{#if create}}
    <h1>Create {{entity.Label}}</h1>
{{else}}
    <p>Update {{entity.Label}}</p>
{{/if}}

<form method="post" action="save">

    {{#formElements elementValues}}

        <div class="form-group">
            <label for="{{this.ID}}">{{this.Label}}</label>
            <input type="text" class="form-control" id="{{this.ID}}" name="{{this.ID}}"  placeholder="" value="{{this.Value}}" />
        </div>

     {{/formElements}}

    <input type="submit" name="submit" value="Submit" />

</form>

</body>
</html>
